void SSD1306_I2C_Write_Command(uint8_t address, uint8_t data) {
	uint8_t dt[2];
	dt[0] = 0x00;
	dt[1] = data;
	HAL_I2C_Master_Transmit(&oledI2c, address, dt, 2, 10);
}

#endif
